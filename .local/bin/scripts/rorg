#!/bin/sh

. dmenu_base

docs_file="$HOME/.local/share/dmenu/papers.list"

add(){
	docs_dir=$(cd $1 2> /dev/null ; pwd)
	echo $docs_dir
	docs_list="$(find "$docs_dir" -name '*.pdf')"
	# Changing the IFS Variable, So that it will split
	# line by line instead of words separated by spaces
	(IFS='
	'
	for doc in $docs_list; do 
		info=$(pdfinfo $doc | grep -E "Author|Title" | sed "s/  //g; s/Title:/\t/g; s/Author:/: /")
		printf "$info"
		info_str_test=$(echo $info|sed 's/ //g')
		[ -n $info_str_test ] && echo $doc$info >> $docs_file
	done)
}

clean(){
	rm $docs_file
}

open(){
	chosen=$(cat $docs_file | awk -F '  ' '{print $2}' | sort | dmenu $base $DB -p "ï‰‰ ")
	
	# Exit if none chosen.
	[ -z "$chosen" ] && exit
	
	to_open=$(grep "$chosen" $docs_file | awk -F '  ' '{print $1}')
	
	zathura "$to_open"
}

if [ -z $1 ]; then
	open
else
	case $1 in
		--add)
			add $2 && exit;;
		--clean)
			clean && exit;;
	esac
fi


